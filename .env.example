# TDD Guard Configuration

# Enable ESLint integration for refactoring phase
LINTER_TYPE=eslint

# Validation client (default: sdk - uses Claude Code subscription)
# Options: sdk, api
# VALIDATION_CLIENT=sdk

# Model version (default: claude-sonnet-4-0)
# TDD_GUARD_MODEL_VERSION=claude-sonnet-4-0

# API Key (only needed if using VALIDATION_CLIENT=api)
# TDD_GUARD_ANTHROPIC_API_KEY=your_api_key_here

# Firebase Configuration
# Get these values from Firebase Console > Project Settings > Your apps
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Use emulators for local development (set to true to enable)
VITE_USE_FIREBASE_EMULATORS=false
