{
  "name": "knockoutfpl",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:full": "concurrently \"JAVA_HOME=/opt/homebrew/opt/openjdk/libexec/openjdk.jdk/Contents/Home npm run emulators\" \"npm run dev\"",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:watch": "playwright test --ui",
    "test:e2e:auth": "playwright test --grep @auth",
    "test:e2e:smoke": "playwright test --grep @smoke",
    "test:e2e:navigation": "playwright test --grep @navigation",
    "test:e2e:dashboard": "playwright test --grep @dashboard",
    "test:e2e:critical": "playwright test --grep @critical",
    "test:e2e:selective": "node scripts/e2e-watch.js",
    "test:all": "npm test -- --run && npm run test:e2e",
    "test:critical": "npm test -- --run && npm run test:e2e:smoke",
    "test:integration": "vitest run integration/",
    "test:integration:watch": "vitest watch integration/",
    "db:start": "docker-compose up -d postgres",
    "db:stop": "docker-compose down",
    "db:logs": "docker-compose logs -f postgres",
    "emulators": "firebase emulators:start --only auth,functions,dataconnect --project knockoutfpl-dev",
    "emulators:e2e": "JAVA_HOME=/opt/homebrew/opt/openjdk/libexec/openjdk.jdk/Contents/Home firebase emulators:start --only auth,dataconnect --project knockoutfpl-dev",
    "emulators:all": "firebase emulators:start --project knockoutfpl-dev",
    "emulators:ui": "firebase emulators:start --import=./firebase-data --export-on-exit --project knockoutfpl-dev",
    "deploy": "./scripts/deploy.sh all",
    "deploy:frontend": "./scripts/deploy.sh frontend",
    "deploy:backend": "./scripts/deploy.sh backend",
    "deploy:functions": "./scripts/deploy.sh functions",
    "deploy:dataconnect": "./scripts/deploy.sh dataconnect",
    "fixtures:list": "npx tsx scripts/fixtures-list.ts",
    "fixtures:download": "npx tsx scripts/fixtures-download.ts",
    "fixtures:scenario": "npx tsx scripts/fixtures-scenario.ts",
    "e2e:seed": "DATA_CONNECT_EMULATOR_HOST=127.0.0.1:9399 FIREBASE_AUTH_EMULATOR_HOST=127.0.0.1:9099 npx tsx e2e/fixtures/seed-tournaments.ts",
    "e2e:seed:clear": "DATA_CONNECT_EMULATOR_HOST=127.0.0.1:9399 FIREBASE_AUTH_EMULATOR_HOST=127.0.0.1:9099 npx tsx e2e/fixtures/seed-tournaments.ts --clear",
    "db:clean": "npx tsx scripts/delete-all-tournaments.ts",
    "db:clean:dry": "npx tsx scripts/delete-all-tournaments.ts --dry-run",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@knockoutfpl/dataconnect": "file:dataconnect/dataconnect-generated",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^12.4.0",
    "lucide-react": "^0.545.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.65.0",
    "react-router-dom": "^7.9.4",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.56.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "firebase-admin": "^13.5.0",
    "firebase-tools": "^14.19.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^24.1.0",
    "minimatch": "^10.0.3",
    "postcss": "^8.5.6",
    "shadcn": "^3.4.0",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  }
}
